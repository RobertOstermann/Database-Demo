<Page x:Class="DatabaseDemo.DemoSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatabaseDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DemoSelection">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" FontSize="48" Margin="25" Click="MessageBoxSelection">
            Message Box Demo
        </Button>
        <Button Grid.Row="1" FontSize="48" Margin="25" Click="ControlBindingSelection">
            Control Binding Demo
        </Button>
    </Grid>
</Page>
